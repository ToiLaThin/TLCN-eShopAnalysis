@using eShopAnalysis.IdentityServer.Models.ViewModels;
@model NotifyConfirmEmailViewModel

<form asp-controller="Auth" asp-action="ConfirmEmail" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="AccountActivationToken" />
    
    <div>

        <input type="text" 
               name="inputActivationToken"
               placeholder="Input token received" 
        />
    </div>
    <div>
        <button type="submit">Confirm using this email</button>
        <small>We will send an link to your email to confirm</small>
    </div>
</form>