@using eShopAnalysis.IdentityServer.Models.ViewModels;
@model RegisterViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="register.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
    <title>Register KFC Boostrap</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Helvatica Nue', sans-serif !important;
            font-size: 16px !important;
            color: #222 !important;
        }

        .heading {
            font-family: 'Oswald', sans-serif;
            color: #222;
        }

        /* form-group form-control */
        input {
            border: none;
            outline: none;
            width: 100%;
            padding: 12px 6px;
            border-bottom: 1px solid #222;
            transition: border-bottom 0.1s ease-in;
        }

            input:focus {
                border-bottom: 3px solid rgb(218, 43, 43);
            }

    </style>
</head>
<body>
    <div class="mx-auto" style="width: 90%;">
        <div class="container-fluid row d-flex flex-column-reverse flex-lg-row">
            <div class="col-lg-6 overflow-x-hidden">
                <img src="https://www.magestore.com/wp-content/uploads/2022/10/what-is-retail-management.jpg"
                     class="fluid-img">
            </div>
            <div class="col-lg-6">
                <form class="d-flex flex-column m-5 justify-content-center gap-4"
                      asp-controller="Auth" 
                      asp-action="Register" 
                      method="post">
                    <input type="hidden" 
                           asp-for="ReturnUrl" />
                    <div>
                        <h2 class="text-uppercase fw-bold heading">
                            Create your account
                        </h2>
                        
                        <div class="form-group">
                            <label for="username">
                            </label>
                            <!-- do not add .form-control to input, it will have fixed appearance -->
                            <input id="username"
                                   asp-for="Username"
                                   type="text"
                                   placeholder="Username *">
                        </div>
                        <div class="form-group">
                            <label for="email">
                            </label>
                            <input id="email"
                                   asp-for="Email"
                                   type="email"
                                   placeholder="Email *">
                        </div>
                        <div class="form-group">
                            <label for="password">
                            </label>
                            <input id="password"
                                   asp-for="Password"
                                   type="password"
                                   placeholder="Password *">
                        </div>
                        <div class="form-group">
                            <label for="passwordConfirm">
                            </label>
                            <input id="passwordConfirm"
                                   asp-for="PasswordConfirmed"
                                   type="password"
                                   placeholder="Password Confirmed*">
                        </div>
                    </div>
                    <div class="d-flex flex-row">
                        <input type="checkbox"
                               class="mr-2"
                               style="width: auto;">
                        <label for="agree" class="d-inline-block float-start">
                            I agree to the
                            <span class="text-decoration-underline text-dark fw-bold">Terms of Use</span>
                            and
                            <span class="text-decoration-underline text-dark fw-bold">Privacy Policy</span>
                        </label>
                    </div>
                    <button class="btn btn-danger rounded-pill w-100 py-3" 
                            type="submit">
                        Create My Account
                    </button>
                    <div>

                        <p class="text-center">
                            Already got an account?
                            <span class="text-decoration-underline text-dark fw-bold">
                                @Html.ActionLink("Sign In", "Login", "Auth")
                            </span>
                        </p>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
</body>
</html>