{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    }
  },
  //serilog will override asp.net core logging config
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "EventBus": "localhost"
  },
  //will be get by AddEventBus()
  "EventBus": {
    "SubscriptionClientName": "ProductCatalog",
    "RetryCount": 5
  },
  "MongoDbSettings": {
    //"ConnectionString": "mongodb://localhost:27017", //this is for standalone server and not support for transaction
    "ConnectionString": "mongodb+srv://thinh:pass@productcatalogeshopanal.fnittpl.mongodb.net/?retryWrites=true&w=majority",
    "DatabaseName": "ProductCatalogDb"
    //"CollectionNames": {
    //  "ProductCollection": "Products"
    //}
  },
  "OpenIdConnectAuthority": {
    "IdentityServerBaseUri": "http://localhost:7002"
  }

}
